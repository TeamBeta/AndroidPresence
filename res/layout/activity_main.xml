<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacts" 
        android:onClick="getContacts"/>

    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/gmail" />
        
        <TextView
             android:id="@+id/gmailPresence"
             android:layout_width="wrap_content"
             android:layout_height="45dp"
             android:gravity="center"
             android:text="Gmail" />

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:background="#ffffff" >
        <Button
            android:id="@+id/gmailBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="editGmailAccount"
            android:layout_alignParentRight="true"
            android:layout_gravity="right" 
            android:background="#cccccc"
            android:text="Edit" />

        </LinearLayout>
     </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/facebook" />
        
        <TextView
             android:id="@+id/facebookPresence"
             android:layout_width="wrap_content"
             android:layout_height="45dp"
             android:gravity="center"
             android:text="Facebook" />

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:background="#ffffff" >
        <Button
            android:id="@+id/fbBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="editFacebookAccount"
            android:layout_alignParentRight="true"
            android:background="#cccccc"
            android:layout_gravity="right" 
            android:text="Edit" />

        </LinearLayout>
     </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/hipchat" />
        
        <TextView
             android:id="@+id/hipchatPresence"
             android:layout_width="wrap_content"
             android:layout_height="45dp"
             android:gravity="center"
             android:text="HipChat" />

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:background="#ffffff" >
        <Button
            android:id="@+id/hipchatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="editHipchatAccount"
            android:layout_alignParentRight="true"
            android:layout_gravity="right" 
            android:background="#cccccc"
            android:text="Edit" />

        </LinearLayout>
     </LinearLayout>
     
     
   
 
</LinearLayout>