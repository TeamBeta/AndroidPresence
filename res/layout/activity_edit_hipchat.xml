<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#cccccc"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" 
		    android:gravity="center"
		    android:textSize="20dp"
            android:text="HipChat API Token" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/hipchatApiToken"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:ems="10"
            android:gravity="center" >

		<requestFocus />
	    </EditText>

        <Button
            android:id="@+id/hipchatValidateToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#66CCFF"
            android:gravity="center"
            android:text="Validate"
            android:onClick="validateHipchatToken" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#cccccc"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" 
		    android:gravity="center"
		    android:textSize="20dp"
            android:text="HipChat Username" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

        <EditText
	        android:id="@+id/hipchatAddress"
	        android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" 
		    android:gravity="center"
	        android:ems="10" >
	    </EditText>

    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#cccccc"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" 
		    android:gravity="center"
		    android:textSize="20dp"
            android:text="Password" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

        <EditText
	        android:id="@+id/hipchatPassword"
	        android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" 
		    android:gravity="center"
	        android:ems="10"
	        android:inputType="textPassword"  >
	    </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/hipchatSave"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" 
		    android:gravity="center"
		    android:background="#66CCFF"
            android:text="Save" />

    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

         <TextView
             android:id="@+id/sipLoading"
             android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" 
		    android:gravity="center"
             android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>


</LinearLayout>